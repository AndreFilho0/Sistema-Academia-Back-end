{
    "openapi": "3.0.0",
    "info": {
        "title": "Micro-Serviço Adms-api",
        "description": "todos os endpoints usados pelo adms",
        "version": "1.0.0"
    },
    "paths": {
        "/api/registrar": {
            "post": {
                "tags": [
                    "Adms"
                ],
                "summary": "endpoint para registrar um novo adms",
                "description": "",
                "operationId": "registrarAdms",
                "requestBody": {
                    "description": "Corpo da requisição contendo os dados para criação do registro",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password",
                                    "gerente",
                                    "professor",
                                    "recepcionista"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    },
                                    "gerente": {
                                        "type": "boolean"
                                    },
                                    "professor": {
                                        "type": "boolean"
                                    },
                                    "recepcionista": {
                                        "type": "boolean"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "Resposta de sucesso",
                                    "properties": {
                                        "mensagem": {
                                            "type": "string"
                                        },
                                        "status": {
                                            "type": "string"
                                        },
                                        "dados": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "corpo invalido",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "Resposta de erro",
                                    "properties": {
                                        "mensagem": {
                                            "type": "string"
                                        },
                                        "status": {
                                            "type": "string"
                                        },
                                        "erros": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/login": {
            "post": {
                "tags": [
                    "Adms"
                ],
                "summary": "endpoint para login do adms",
                "description": "",
                "operationId": "loginAdms",
                "requestBody": {
                    "description": "Corpo da requisição para fazer login",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Sucesso ao entrar",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "Resposta de sucesso",
                                    "properties": {
                                        "token": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "corpo invalido",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "Resposta de erro",
                                    "properties": {
                                        "mensagem": {
                                            "type": "string"
                                        },
                                        "status": {
                                            "type": "string"
                                        },
                                        "erros": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/logout": {
            "get": {
                "tags": [
                    "Adms"
                ],
                "summary": "Endpoint para logout dos adms",
                "description": "Passar o token na cabeça (Authorization: Bearer {token})",
                "operationId": "logoutAdms",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "Token JWT",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Sucesso ao entrar",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "Resposta de sucesso",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Corpo inválido",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "Resposta de erro",
                                    "properties": {
                                        "mensagem": {
                                            "type": "string"
                                        },
                                        "status": {
                                            "type": "string"
                                        },
                                        "erros": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}